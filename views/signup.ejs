<%- include('partials/header') %>

    <title>Signup </title>

    <div class=" m-auto mt-10 p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-6">Create an Account</h2>
        <form action="/api/v1/usercreate" method="POST">
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700" for="username">Username</label>
                <input type="text" id="username" name="username" required
                    class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500 focus:border-blue-500 p-2">
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700" for="email">Email</label>
                <input type="email" id="email" name="email" required
                    class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500 focus:border-blue-500 p-2">
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700" for="password">Password</label>
                <input type="password" id="password" name="password" required
                    class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500 focus:border-blue-500 p-2">
            </div>
            <div class="mb-4">
                <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-200">Sign
                    Up</button>
            </div>
        </form>
        <p class="text-center text-sm text-gray-600">Already have an account? <a href="/login"
                class="text-blue-600 hover:underline">Login here</a>.</p>
    </div>